<h1>New Game</h1>
<% @letters.each do |letter| %>
<span style="font-family: arial; color: white; font-weight: bold; font-size: 35px; background-color: #C52F24; padding: 16px;"><%= letter %></span>
<% end %>

<% @start_time = Time.now %>

<div id="word-form">
  <p>What is the longest word you can find?</p>
  <form action="/score" method="post">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag :start_time, @start_time %>
    <%= hidden_field_tag :grid, @letters %>
    <input type="text" name="word" placeholder="Type your word...">
    <input type="submit">
  </form>
</div>

